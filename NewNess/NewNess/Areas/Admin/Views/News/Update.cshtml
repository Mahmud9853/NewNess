@model News
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create</h4>
                <div class="row " >
                    @foreach (NewsImage newsImage in Model.NewsImages)
                    {
                        <div class="col-md-3 float-left myImg">
                            <img src="~/img/@newsImage.Image" style="width:100px; height:100px; object-fit:cover;"alt="Alternate Text" />
                            <a class="btn btn-danger del-images" >Delete</a>
                            <input value="@newsImage.Id" type="hidden"/>
                        </div>
                    }

                </div>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Photos" for="exampleInputName1"></label>
                        <input asp-for="Photos" class="form-control">
                        <span asp-validation-for="Photos"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title" for="exampleInputName1"></label>
                        <input asp-for="Title" type="text" class="form-control">
                        <span asp-validation-for="Title"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" for="exampleInputName1"></label>
                        <textarea asp-for="Description" rows="6" type="text" class="form-control"></textarea>
                        <span asp-validation-for="Description"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreateTime" for="exampleInputName1"></label>
                        <input asp-for="CreateTime" class="form-control">
                        <span asp-validation-for="CreateTime"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="By" for="exampleInputName1"></label>
                        <input asp-for="By" class="form-control" placeholder="Ad və Soyad">
                        <span asp-validation-for="By"></span>
                    </div>
                    <select name="categoryId" class="form-select w-100 p-2 mb-4 text-center" aria-label="Default select example">
                        <option selected>--Category--</option>
                        @foreach (Category category in ViewBag.Category)
                        {
                            if (Model.CategoryId == category.Id)
                            {
                                <option selected value="@category.Id">@category.Name</option>

                            }
                            else
                            {
                                <option value="@category.Id">@category.Name</option>

                            }



                        }
                    </select>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light" asp-controller="News" asp-action="Index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

