
@model Slider
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create</h4>

                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Photo" for="exampleInputName1"></label>
                        <input asp-for="Photo" class="form-control">
                        <span asp-validation-for="Photo"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title" for="exampleInputName1"></label>
                        <input asp-for="Title" type="text" class="form-control">
                        <span asp-validation-for="Title"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" for="exampleInputName1"></label>
                        <textarea asp-for="Description" rows="6" type="text" class="form-control"></textarea>
                        <span asp-validation-for="Description"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreateTime" for="exampleInputName1"></label>
                        <input asp-for="CreateTime" class="form-control">
                        <span asp-validation-for="CreateTime"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="By" for="exampleInputName1"></label>
                        <input asp-for="By" class="form-control" placeholder="Ad və Soyad">
                        <span asp-validation-for="By"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light" asp-controller="Slider" asp-action="Index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}