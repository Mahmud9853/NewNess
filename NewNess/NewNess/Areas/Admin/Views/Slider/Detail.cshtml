@model Slider
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous" />
<div class="container-fluid">
    <div class="row">


        <div class="col-md-5">
            <div class="project-info-box mt-0">
                <h5>DETAILS</h5>
                <p class="mb-0">@Html.Raw(Model.Description)</p>
            </div><!-- / project-info-box -->
            <div class="project-info-box">
                <p><b>Title:</b> @Model.Title</p>
                <p><b>Date:</b>@Model.CreateTime.ToString("dd , MMMM/yyyy")</p>
                <p><b>By:</b> @Model.By</p>
              
                @*<p><b>Tools:</b> Illustrator</p>
        <p class="mb-0"><b>Budget:</b> $500</p>*@
            </div><!-- / project-info-box -->
        </div><!-- / column -->

        <div class="col-md-7">
            <img src="~/img/@Model.Image" alt="project-image" class="rounded w-50">
            <div class="project-info-box">
                @*<p><b>Skills:</b> Illustrator</p>*@
            </div><!-- / project-info-box -->
        </div><!-- / column -->

    </div>
</div>
