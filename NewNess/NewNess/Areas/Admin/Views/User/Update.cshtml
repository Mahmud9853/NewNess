@model UpdateVM
@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create</h4>
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <form class="forms-sample" method="post" >
               
                    <div class="form-group">
                        <label asp-for="UserName" for="exampleInputName1"></label>
                        <input asp-for="UserName" type="text" class="form-control">
                        <span asp-validation-for="UserName"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="FullName" for="exampleInputName1"></label>
                        <input asp-for="FullName"  type="text" class="form-control">
                        <span asp-validation-for="FullName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" for="exampleInputName1"></label>
                        <input asp-for="Email"  type="text" class="form-control">
                        <span asp-validation-for="Email"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light" asp-action="Index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


