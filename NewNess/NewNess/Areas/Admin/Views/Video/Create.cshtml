
@model Video
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create</h4>

                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Link" for="exampleInputName1"></label>
                        <input asp-for="Link" class="form-control">
                        <span asp-validation-for="Link"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title" for="exampleInputName1"></label>
                        <input asp-for="Title" type="text" class="form-control">
                        <span asp-validation-for="Title"></span>
                    </div>

                    @*<div class="form-group">
                            <label asp-for="Description" for="exampleInputName1"></label>
                            <textarea asp-for="Description" rows="6" type="text" class="form-control"></textarea>
                            <span asp-validation-for="Description"></span>
                        </div>*@
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light" asp-controller="News" asp-action="Index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}