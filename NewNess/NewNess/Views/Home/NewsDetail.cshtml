@model News

@{
    ViewData["Title"] = "NewsDetail";
}


<div class="container">
    <div class="row">
        @foreach (NewsImage newsImage in Model.NewsImages)
        {

            <div class="col-md-5">
                <img src="~/img/@newsImage.Image" alt="Alternate Text" />
            </div>
        }
        <div class="col-md-7">
            <h1>@Model.Title</h1>
            <p>@Html.Raw(Model.Description)</p>
        </div>
    </div>
</div>