@model Popular
@{
    ViewData["Title"] = "Detail";
}

<div class="container">
    <div class="row">

        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12 my-4 text-center"><h1>@Model.Title</h1></div>
            </div>

            <div class="slider my-2">

                <!-- fade css -->

                <div class="myslide ">
                    <img src="~/img/@Model.Image" style="width: 100%; height: 100%; ">
                </div>

              
            </div>
        </div>
    </div>
    <div class="row my-2">
        <div class="f-left col-md-12 col-sm-12 col-lg-12 w-100 my-4">
            <p class="text-center">@Html.Raw(Model.Description)</p>
            <div class="w-100">
                <span class="text-left">By @Model.By</span>
            </div>
            <div class="w-100">

                <span class="text-left "><i class="bi bi-hourglass-split "></i> @Model.CreateTime.ToString("dd/MMMM/yyyy HH:mm")</span>
            </div>

        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-12 col-sm-3 d-flex justify-content-between">
            <a class="btn btn-warning text-left my-5">Bənzər xəbərlər</a>
        </div>
        @await Component.InvokeAsync("DetailSlider")

        <div class="col-md-12 col-sm-3 d-flex justify-content-between">
            <a class="btn btn-warning text-left my-5">Ən Son xəbərlər</a>
        </div>
        @await Component.InvokeAsync("DetailNews")
    </div>
</div>