<body class="active" onload="initClock()">

    <div class="float-left w-100 pb-5 ">

        <nav class="navbar navbar-expand-lg position-fixed w-100 mb-5" style="background-color: #ffd800; z-index: 1000; ">
            <div class="container-fluid">
                <a class="navbar-brand mx-5" asp-controller="Home" asp-action="Index">NEWNESS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">

                    <ul class="navbar-nav mx-auto text-center">

                        <li class="nav-item ">
                            <a class="nav-link  " aria-current="page" asp-controller="News" asp-action="Index">Xəbərlər</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link  " aria-current="page" asp-controller="Contact" asp-action="Index">Əlaqə</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link  " aria-current="page" asp-controller="Video" asp-action="Index">Video</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Member"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Profile" asp-action="Index">@User.Identity.Name</a>

                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">Logout</a>

                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">@User.Identity.Name</a>

                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">Logout</a>

                                </li>
                            }

                        
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>

                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>

                            </li>
                        }

                    </ul>
                    <form class="d-flex " role="search">
                        <input class="form-control me-2" id="globalsearch" type="search" placeholder="Search" aria-label="Search">
                      
                    </form>
                </div>
            </div>
        </nav>
    </div>

    <div class="w-100 fast d-flex justify-content-center  "  style="overflow-y:auto; z-index:1000;"  >
            <ul class=" w-25 list-unstyled " id="mylist" >
                
            </ul>
        </div>


    @await Component.InvokeAsync("Slider")

