@model HomeVM
@if (Model.News.Count != 0)
{
    @foreach (News news in Model.News)
    {

        <div class=" my-3 ">

            <div class="row">
                <div class="col-md-6 ">
                    <a asp-controller="News" asp-action="Detail" asp-route-id="@news.Id"><img class="w-25" src="~/img/@news.NewsImages.FirstOrDefault()?.Image" /></a>

                </div>
                <div class="col-md-6 ">

                    <h6 class="card-title mt-2 text-left" style="font-size:12px;">@news.Title</h6>

                </div>

            </div>
            <div class="row">
                <div class="col-md-12">
                    <span class="text-left " style="font-size:10px;"><i class="bi bi-hourglass-split "></i> @news.CreateTime.ToString("HH:mm")</span>
                </div>
            </div>

        </div>
    }
}
@if (Model.Sliders.Count != 0)
{

    @foreach (Slider slider in Model.Sliders)
    {
        <div class=" my-3 ">

            <div class="row">
                <div class="col-md-6 ">
                    <a asp-controller="Home" asp-action="PopularDetail" asp-route-id="@slider.Id"> <img src="~/img/@slider.Image" class="img-fluid w-25" alt="..."></a>

                </div>
                <div class="col-md-6 ">

                    <h6 class="card-title mt-2 text-left" style="font-size:12px;">@slider.Title</h6>

                </div>

            </div>
            <div class="row">
                <div class="col-md-12">
                    <span class="text-left " style="font-size:10px;"><i class="bi bi-hourglass-split "></i> @slider.CreateTime.ToString("HH:mm")</span>
                </div>
            </div>

        </div>
    }
}
@if (Model.Populars.Count != 0)
{
    @foreach (Popular popular in Model.Populars)
    {
        <div class=" my-3 ">

            <div class="row">
                <div class="col-md-6 ">
                    <a asp-controller="Home" asp-action="PopularDetail" asp-route-id="@popular.Id"> <img src="~/img/@popular.Image" class="img-fluid w-25" alt="..."></a>

                </div>
                <div class="col-md-6 ">

                    <h6 class="card-title mt-2 text-left" style="font-size:12px;">@popular.Title</h6>

                </div>

            </div>
            <div class="row">
                <div class="col-md-12">
                    <span class="text-left " style="font-size:10px;"><i class="bi bi-hourglass-split "></i> @popular.CreateTime.ToString("HH:mm")</span>
                </div>
            </div>

        </div>

    }
}